var Data = require('work');
var objs = require('objects');
var j;

var win1 = Ti.UI.createWindow();

var view1 = Ti.UI.createView({
	top : 0,
	bottom : 0,
	left : 0, 
	right : 0,
	backgroundColor : "white"
});

var picker = Ti.UI.createPicker({
	top : 20
});


picker.addEventListener("change", function(){
	switch(picker.getValue()){
	case "Car":
		j = 0;
		break;
	case "Airplane":
		j = 1;
		break;
	case "Boat":
		j = 2;
		break;
	case "Bike":
		j = 3;
		break;
	case "Skateboard":
		j = 4;
		break;
	case "Cat":
		j = 5;
		break;
	case "Dog":
		j = 6;
		break;
	case "Bird":
		j = 7;
		break;
	case "Fish":
		j = 8;
		break;
	case "Kangaroo":
		j = 9;
		break;
}

Data.work[1].text = objs.objects[j].about().toString();
});

view1.add(Data.work[1]);
picker.add(Data.work[0]);
picker.selectionIndicator = true;
view1.add(picker);
win1.add(view1);
win1.open();
