//conversion formulas for the temperature converter app
//by Travis A. Mix
//January 29, 2014


function fToC(fah){
	var r = (fah - 32) * 5/9;
	return r;
}

function fToK(fah){
	var r = (fah - 32) / 1.8000 + 273.15;
	return r;
}

function fToR(fah){
	var r = fah + 459.67;
	return r;
}

function cToF(cel){
	var r = cel * (9/5) + 32;
	return r;
}

function cToK(cel){
	var r = cel + 273.15;
	return r;
}

function cToR(cel){
	var r = (cel + 273.15) * (9/5);
	return r;
}

function kToF(kel){
	var r = kel * (9/5) - 459.67;
	return r;
}

function kToC(kel){
	var r = kel - 273.15;
	return r;
}

function kToR(kel){
	var r = kel * (9/5);
	return r;
}

function rToF(ran){
	var r = ran - 459.67;
	return r;
}

function rToC(ran){
	var r = (ran - 491.67) * (5/9);
	return r;
}

function rToK(ran){
	var r = ran * (5/9);
	return r;
}
